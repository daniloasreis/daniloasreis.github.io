---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

type Props = {
  nome: string;
  foto: {
    src: ImageMetadata;
    alt: string;
  };
  idade: number;
  cidade: string;
  estadoCivil: string;
  escolaridade: string;
  profissao: string;

  metas: string[];
  frustracoes: string[];
};

const {
  nome,
  foto,
  idade,
  cidade,
  estadoCivil,
  escolaridade,
  profissao,
  metas,
  frustracoes,
} = Astro.props;
---

<style lang="scss">
  @use "@styles/psiconect/colors.scss";
  @use "@styles/tokens.scss";

  .persona {
    margin-bottom: tokens.$space-10;
    display: grid;
    grid:
      "avatar dados"
      "avatar dados"
      "avatar metas"
      "descricao metas"
      "descricao frustracoes"
      "descricao frustracoes" / 0.8fr 1fr;
    gap: tokens.$space-6;
    position: relative;
    @include tokens.on-md-screen {
      grid:
        "avatar"
        "dados"
        "descricao"
        "metas"
        "frustracoes" / 1fr;
    }
    ul {
      padding-left: 2ch;
    }
    h4 {
      color: colors.$main;
    }
    .avatar {
      grid-area: avatar;
      width: 100%;
      border-radius: tokens.$space-5;
      height: 100%;
      object-fit: cover;
      @include tokens.on-md-screen {
        width: 12rem;
      }
    }
    .dados {
      grid-area: dados;
      ul {
        list-style-type: none;
        padding: 0;
      }
    }
    .metas {
      grid-area: metas;
    }
    .frustracoes {
      grid-area: frustracoes;
    }
    .descricao {
      grid-area: descricao;
    }
    .float-area {
      position: absolute;
      top: -2%;
      left: -10%;
      z-index: -1;
      @include tokens.on-md-screen {
        top: -1%;
      }
    }
    .bg-dots {
      width: 30rem;
      height: 30rem;
      @include tokens.on-md-screen {
        width: 20rem;
        height: 10rem;
      }
    }
  }
</style>

<div class="persona">
  <div class="float-area">
    <div aria-hidden="true" class="bg-dots"></div>
  </div>
  <Image class="avatar" alt={foto.alt} src={foto.src} />
  <div class="dados padding-box gradient-border bg-neutral-teal">
    <h4>{nome}</h4>
    <ul>
      <li>{idade} anos</li>
      <li>{cidade}</li>
      <li>{estadoCivil}</li>
      <li>{escolaridade}</li>
      <li>{profissao}</li>
    </ul>
  </div>
  <div class="descricao padding-box gradient-border bg-neutral-teal">
    <slot />
  </div>
  <div class="metas padding-box gradient-border bg-neutral-teal">
    <h4>Metas</h4>
    <ul>
      {metas.map((metas) => <li>{metas}</li>)}
    </ul>
  </div>
  <div class="frustracoes padding-box gradient-border bg-neutral-teal">
    <h4>Frustrações</h4>
    <ul>
      {frustracoes.map((frustracao) => <li>{frustracao}</li>)}
    </ul>
  </div>
</div>
