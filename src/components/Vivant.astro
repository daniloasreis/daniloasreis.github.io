      }
      h4 {
        text-align: center;
        margin-top: tokens.$space-4;
      }
      img {
        border-radius: 50%;
        width: 10rem;
        height: auto;
        margin-inline: auto;
        aspect-ratio: 1 / 1;
      }
    }
    .frase {
      grid-area: frase;
      border: 1px solid colors.$neutral-light;
      font-size: 24px;
      border-radius: tokens.$space-5;
      padding: tokens.$space-4;
      padding-block: tokens.$space-2;
      padding-top: calc(tokens.$space-4 + 0.1ex);
      color: colors.$accent;
      text-align: center;
    }
    .interesses {
      grid-area: interesses;
    }
    .frustracoes {
      grid-area: frustracoes;
    }
    .detalhes {
      list-style-type: none;
      padding: 0;
      padding-block: tokens.$space-2;
      li {
        text-wrap: nowrap;
        display: flex;
        gap: 1ex;
      }
      span {
        color: colors.$accent;
      }
    }
    .descricao {
      grid-area: descricao;
      border: 1px solid colors.$accent;
      border-radius: tokens.$space-5;
      padding: tokens.$space-5;
    }
  }

  .table-wrapper {
    width: 100%;
    overflow-y: auto;
    border: 1px solid colors.$accent;
    border-radius: tokens.$space-4;
    scrollbar-color: colors.$main colors.$accent;
    background:
