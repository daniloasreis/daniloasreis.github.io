<style lang="scss">
  @use '../styles/colors.scss';
  @use '../styles/tokens.scss';

  body {
    font-family: 'Anek Odia Variable', sans-serif;
    font-size: 18px;
  }

  main {
    height: 100lvh;
    scroll-snap-type: y mandatory;
    overflow-y: auto;
  }

  header,
  section {
    background-color: var(--background-color);
    scroll-snap-align: start;
  }

  section {
    h2:first-child {
      font-size: 72px;
      text-transform: uppercase;
      font-weight: 500;
      margin-bottom: -1.05em;
      color: colors.$accent-light;
      margin-inline: -0.1ch;
    }
    h3 {
      text-transform: uppercase;
      font-weight: 700;
      color: colors.$main;
      font-size: 24px;
      margin-top: 1em;
      margin-bottom: 0.25em;
      margin-inline: -0.05ch;
    }
  }

  p {
    line-height: 1.6;
    margin-bottom: 0.75em;
    hyphens: auto;
  }

  .container {
    margin: auto;
    padding-inline: tokens.$space-6;
    padding-block: tokens.$space-8;
    max-width: 64rem;
    min-height: 100dvh;
    overflow-x: auto;
  }

  :focus-visible {
    outline-offset: 0.25em;
    outline-width: 2px;
    outline-color: #fbbc05;
    outline-style: dashed;
    padding-inline: 0.2em;
    margin-inline: -0.2em;
  }

  a {
    color: currentColor;
    text-underline-offset: 3px;
    border-radius: tokens.$space-2;
  }

  .header {
    --background-color: #{colors.$main};
    color: colors.$neutral-light;
    position: relative;
    overflow: clip;

    .container {
      display: grid;
      grid: 'text image' / 1.2fr 1fr;
      gap: tokens.$space-4;
      height: 100dvh;
      overflow: visible;
      padding-block: tokens.$space-12;
    }

    .image {
      grid-area: image;
      margin-bottom: calc(-1 * tokens.$space-12);
      position: relative;
      img {
        position: absolute;
        height: calc(100vh - tokens.$space-12);
        width: auto;
        aspect-ratio: 706 / 1003;
        left: 0;
        top: 0;
        max-width: unset;
      }
    }

    .text {
      grid-area: text;
      display: flex;
      flex-direction: column;
      gap: tokens.$space-4;
    }

    @media (max-aspect-ratio: 8 / 10) {
      .container {
        grid:
          'text' min-content
          'image' / 1fr;
      }
      .image {
        img {
          left: unset;
          right: 0;
          height: 100%;
        }
      }
    }

    hgroup {
      margin-bottom: tokens.$space-6;
    }
    h1 {
      text-transform: uppercase;
      font-size: 72px;
      font-weight: 500;
      display: flex;
      flex-direction: column;
      margin-bottom: tokens.$space-6;
      > * {
        display: block;
        height: 1em;
      }
      .app {
        font-size: 28px;
        font-weight: 200;
      }
      .restaurante {
        font-size: 0.5em;
      }
    }

    h2 {
      font-weight: 300;
    }
    .tags {
      display: flex;
      list-style-type: none;
      padding: 0;
      gap: tokens.$space-6;
      margin-bottom: tokens.$space-8;
      li {
        padding-inline: tokens.$space-4;
        padding-top: calc(tokens.$space-2 + 0.4em);
        padding-bottom: tokens.$space-2;
        line-height: 1;
        border: 1px solid colors.$neutral-light;
        border-radius: tokens.$space-4;
      }
    }
    .author {
      text-transform: uppercase;
      font-size: 1.5em;
    }
  }

  .projeto {
    counter-reset: desafio;
    --background-color: #{colors.$neutral-light};
    .ferramentas {
      display: flex;
      padding: 0;
      list-style-type: none;
      gap: tokens.$space-6;
      img {
